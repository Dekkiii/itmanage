</div>
</nav>



  <% if (typeof successMessages !== 'undefined' && successMessages !== '') { %>
    
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= successMessages %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% } %>


  <div id="membership-section">
<section class="Form">
  
  <div class="container">
    <div class="row justify-content-center align-items-center">

      <section class="Form">
        <section class="Form1">
          <div class="container">
            <div class="h1-center">
            <h1>Add new Member</h1>
              </div>
              <div>
            <form method="post" action="/addmember">

              <% if (typeof errorMessages !== 'undefined' && errorMessages.length > 0) { %>
                <% errorMessages.forEach(function(errorMessage) { %>
                  <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <li><%= errorMessage %></li>
                  </div>
                <% }) %>
              <% } %>   
                      <input type="hidden" name="userId" value="<% userId %>">
                          <input type="text" name="firstname" placeholder="First name" class="form-control my-3 p-4" required>
                          <input type="text" name="lastname" placeholder="Last name" class="form-control my-3 p-4" required>
                          <input type="number" name="number" placeholder="Number" class="form-control my-3 p-4" required>
                          <input type="date" name="birthdate" placeholder="Birthdate" class="form-control my-3 p-4" required>

                          <label>Gender:</label><br>
                          <input class="input1" type="radio" name="gender" value="male" required> Male<br>
                          <input class="input1" type="radio" name="gender" value="female" required> Female<br>
                          
                          <label>Experience:</label><br>
                              <input type="radio" name="experience" value="Beginner" required> Beginner<br>
                              <input type="radio" name="experience" value="Intermediate" required> Intermediate<br>
                              <input type="radio" name="experience" value="Expert" required> Expert<br>

                          <label>Membership Duration:</label><br>
                          <select name="membershipDuration" class="form-control my-2 p-2" required>
                            <option value="" selected disabled>Select duration</option>
                            <option value="1">1 month</option>
                            <option value="3">3 months</option>
                            <option value="6">6 months</option>
                            <option value="12">12 months</option>
                          </select>

                          <label>Select Coach: </label><br>
                          <select name="coach" class="form-control my-2 p-2" required>
                          <option value="" selected disabled>Select Coach</option>
                          <% coaches.forEach((coach) => { %>
                          <option value="<%= coach.id %>"><%= coach.firstname %></option>
                          <% }); %>
                          </select>
                  


                          <button type="submit" value="userinfo" class="btn1 mt-3 mb-5">Add Information</button>

                          <button  class="btn1 mt-1 mb-5" onclick="toggleSection()" >Daily</button>

            </form>
          </div>
        </div>
        </section>
      </section>
    </div>
  </div>
</section>
  </div>
  <div id="daily-section" class="hidden">
    <section class="Form">
      
      <div class="container">
        <div class="row justify-content-center align-items-center">
    
          <section class="Form">
            <section class="Form1">
              <div class="container">
                <div class="h1-center">
                <h1>Daily</h1>
                  </div>
                  <div>
                <form method="post" action="/daily">
    
                  <% if (typeof errorMessages !== 'undefined' && errorMessages.length > 0) { %>
                    <% errorMessages.forEach(function(errorMessage) { %>
                      <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <li><%= errorMessage %></li>
                      </div>
                    <% }) %>
                  <% } %>   
                          
                              <input type="text" name="firstname" placeholder="First name" class="form-control my-3 p-4" required>
                              <input type="text" name="lastname" placeholder="Last name" class="form-control my-3 p-4" required>
                              <input type="number" name="number" placeholder="Number" class="form-control my-3 p-4" required>
                              <label>Gender:</label><br>
                              <input class="input1" type="radio" name="gender" value="male" required> Male<br>
                              <input class="input1" type="radio" name="gender" value="female" required> Female<br>
                              <button type="submit" value="daily" class="btn1 mt-3 mb-5">Proceed</button>
                              <button  class="btn1 mt-1 mb-5"onclick="toggleSection()">Membership</button>
                </form>
              </div>
            </div>
            </section>
          </section>
        </div>
      </div>
    </section>
  </div>


</body>
</html>